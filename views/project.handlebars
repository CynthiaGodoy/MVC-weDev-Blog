<div class="text-center">
  <h2>{{title}}</h2>  
  <p>{{description}}</p>
  <p>Created by {{user.username}} on {{format_date date_created}}</p>
<div>

<div>
  {{#if logged_in}}
  <form class="new-comment-form" data-projectid={{id}}>
    <div>
      <textarea class="comment-entry" id="comment_description" name="entry"></textarea>
    </div>
    <div>
      <button class="button" type="submit">Add Comment</button>
    </div>
  </form>

  {{/if}}
</div>

  {{#each comments as |comment|}}
  <div style="border-style: solid;">
    <p>{{comment.comment_description}}</p>
  </div>
  {{/each}}
