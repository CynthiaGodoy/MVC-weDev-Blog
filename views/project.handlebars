<div class="card-project">
  <div class="header-project">
    <h2>{{title}}</h2>  
    <p>Created by {{user.username}} on {{format_date date_created}}</p>
  </div>

    <div class="footer">
      <p>{{description}}</p>
    <div>
</div>

    {{#if logged_in}}

    <form class="new-comment-form" data-projectid={{id}}>
      <div>
        <label for="comment">Comment:</label>
        <br/>
        <textarea class="comment-entry" id="comment_description" name="entry"></textarea>
      </div>
      <div>
        <button class="submit-btn" type="submit">Add Comment</button>
      </div>
    </form>
  </div>

  {{/if}}
</div>

  {{#each comments as |comment|}}
  <div class="single-comment">
    <p>{{comment_description}}</p>
    <p>Created by {{user.username}} on {{format_date date_created}}</p>
  </div>{{/each}}
  
  {{#if logged_in}}
<button class="delete-btn" type="submit">Delete Comment</button>
  {{/if}}
  

<script src="/js/profile.js"></script>
<script src="/js/comment.js"></script>